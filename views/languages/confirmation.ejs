    <style>
 body {
    font-family: 'gloria hallelujah', cursive;
    color: #333;
    margin: 10px;
    padding: 0;
}

.logo {
    font-size: 24px;
}

.menu i {
    font-size: 24px;
    cursor: pointer;
}

#translator-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
}

.language-selector {
    position: relative;
    display: inline-block;
    margin: 10px;
}

.language-selector select {
    padding: 10px;
    border-radius: 20px;
    border: 2px solid #ccc;
    outline: none;
}

.language-selector i {
    position: absolute;
    right: 10px;
    top: 14px;
    pointer-events: none;
}

#input-text, #output-text {
    width: 80%;
    margin: 10px 0;
    padding: 15px;
    border: none;
    border-radius: 20px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    font-size: 16px;
}

#confirm {
    font-family: 'libre barcode 39', cursive;
    width: 80%;
    margin: 10px 0;
}

#translate-button {
    font-family: 'Gloria Hallelujah', cursive;
    margin: 20px;
    padding: 10px 20px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 20px;
    cursor: pointer;
    font-size: 16px;
    display: flex;
    align-items: center;
}

#translate-button i {
    margin-right: 10px;
}

#features {
    display: flex;
    overflow-x: auto;
    padding: 20px;
    white-space: nowrap;
}

.feature-card {
    display: inline-block;
    width: 150px;
    margin-right: 20px;
    background-color: white;
    border: 1px solid #ccc;
    padding: 10px;
    border-radius: 10px;
    text-align: center;
}

.confirm {
    margin: 10px;
    text-align: left;
    text-indent: 0;

}

footer {
    background-color: #343a40;
    color: white;
    text-align: center;
    padding: 10px 20px;
    position: fixed;
    bottom: 0;
    width: 100%;
}

nav {
    position: relative;
    grid-column: 1 / -1; /* Spans across all columns */
